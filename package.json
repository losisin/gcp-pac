{
  "name": "gcp-pac",
  "description": "GCP Policy as Code (gcp-pac) for your Pulumi typescript apps",
  "version": "VERSION",
  "licence": "Apache-2.0",
  "author": {
    "name": "Aleksandar Stojanov",
    "url": "https://fnd.works",
    "email": "me@fnd.works"
  },
  "homepage": "https://github.com/losisin/gcp-pac",
  "repository": {
    "type": "git",
    "url": "https://github.com/losisin/gcp-pac"
  },
  "bugs": {
    "url": "https://github.com/losisin/gcp-pac/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "pulumi",
    "policy-as-code",
    "gcp",
    "gcp-pac",
    "typescript"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules/ && rm -rf package-lock.json && npm install",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npx eslint",
    "package": "ncc build src/index.ts -e @pulumi/pulumi -e google-protobuf -e protobufjs -e @grpc/grpc-js --minify --out dist/",
    "package:watch": "npm run package -- --watch",
    "bundle": "npm run package && node scripts/setup.mjs",
    "publish": "npm publish ./dist --access public"
  },
  "dependencies": {
    "@pulumi/policy": "^1.20.0"
  },
  "devDependencies": {
    "@pulumi/pulumi": "^3.216.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.57.1",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-prettier": "^5.5.5",
    "js-yaml": "^4.1.1",
    "prettier": "^3.8.0",
    "prettier-eslint": "^16.4.2",
    "typescript": "^5.9.3"
  }
}
