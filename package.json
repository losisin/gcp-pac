{
  "name": "gcp-pac",
  "description": "GCP Policy as Code (gcp-pac) for your Pulumi typescript apps",
  "version": "VERSION",
  "licence": "Apache-2.0",
	"author": {
		"name": "Aleksandar Stojanov",
		"url": "https://fnd.works",
		"email": "me@fnd.works"
	},
  "homepage": "https://github.com/losisin/gcp-pac",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/losisin/gcp-pac.git"
  },
  "bugs": {
    "url": "https://github.com/losisin/gcp-pac/issues"
  },
	"engines": {
		"node": ">=18.0.0"
	},
  "keywords": [
    "pulumi",
    "policy-as-code",
    "gcp",
    "gcp-pac",
    "typescript"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules/ && rm -rf package-lock.json && npm install",
    "format:write": "prettier --write **/*.ts",
    "format:check": "prettier --check **/*.ts",
    "lint": "npx eslint",
    "test": "mocha -r ts-node/register '__tests__/**/*.test.ts'",
    "package": "ncc build src/index.ts -e @pulumi/pulumi -e google-protobuf -e protobufjs -e @grpc/grpc-js --minify --out dist/",
    "package:watch": "npm run package -- --watch",
    "bundle": "npm run format:write && npm run package && node scripts/setup.mjs",
    "publish": "npm publish --access public dist/"
  },
  "dependencies": {
    "@pulumi/policy": "^1.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@pulumi/pulumi": "^3.0.0",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.55.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "typescript": "^5.2.2",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "js-yaml": "^4.1.0"
  }
}
